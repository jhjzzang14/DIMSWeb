<?xml version="1.0" encoding="UTF-8"?>
<decorators defaultdir="/WEB-INF/views">
	<excludes>
		<pattern>/user/register</pattern>
		<pattern>/login</pattern>
		<pattern>/auth</pattern>
		<pattern>/mobile/*</pattern>
    </excludes>
    
    <decorator name="layout" page="global/layout.jsp">
        <pattern>/*</pattern>
    </decorator>
    
    <decorator name="aside-left" page="global/aside-left.jsp"/>
    
    <decorator name="aside-right" page="global/aside-right.jsp"/>
    
    <decorator name="header" page="global/header.jsp" />
    
    <decorator name="footer" page="global/footer.jsp" />     
</decorators>